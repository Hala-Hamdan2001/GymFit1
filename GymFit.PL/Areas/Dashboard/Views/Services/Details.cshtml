@model ServiceDetailsVM
@section header {
    Services Details
}
<div class="col-md-12">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Details for @Model.Name</h3>
        </div>
        <ul>
            <li>Description: @Model.Description</li>
            <li>Status: @(Model.IsDeleted? "Deleted":"Active")</li>
            <li>Created: @Model.CreatedAt</li>
            <li>Image: <img src="~/files/images/@Model.ImageName" width="100px"/></li>
        </ul>
    </div>
</div>